  <div class="countdown-box">
    <div class="title">ðŸ”¥ Activation Event</div>
    <div class="time-label">June 30, 6:00 PM â€“ 10:00 PM</div>
    <div id="event-timer" class="timer"></div>
    <div id="event-status" class="status-text"></div>
  </div>

  <script>
    const abuDhabiOffset = 4 * 60; // UTC+4

    function getAbuDhabiNow() {
      const now = new Date();
      const utc = now.getTime() + now.getTimezoneOffset() * 60000;
      return new Date(utc + abuDhabiOffset * 60000);
    }

    function getCountdownParts(diffMs) {
      const totalSeconds = Math.floor(diffMs / 1000);
      const hours = Math.floor(totalSeconds / 3600);
      const minutes = Math.floor((totalSeconds % 3600) / 60);
      const seconds = totalSeconds % 60;
      return {
        h: hours.toString().padStart(2, '0'),
        m: minutes.toString().padStart(2, '0'),
        s: seconds.toString().padStart(2, '0')
      };
    }

    function updateCountdowns() {
      const now = getAbuDhabiNow();

      const standbyTime = new Date("2025-06-29T18:00:00+04:00");
      const activationTime = new Date("2025-06-30T09:00:00+04:00");
      const eventStart = new Date("2025-06-30T18:00:00+04:00");
      const eventEnd = new Date("2025-06-30T22:00:00+04:00");

      function renderTimer(containerId, parts) {
        document.getElementById(containerId).innerHTML = `
          <div class="digit">${parts.h}</div>
          <div class="separator">:</div>
          <div class="digit">${parts.m}</div>
          <div class="separator">:</div>
          <div class="digit">${parts.s}</div>
        `;
      }

      // Standby Notice
      if (now < standbyTime) {
        const parts = getCountdownParts(standbyTime - now);
        renderTimer("standby-timer", parts);
        document.getElementById("standby-status").textContent = "Starting in";
      } else {
        document.getElementById("standby-timer").innerHTML = "";
        document.getElementById("standby-status").textContent = "Past";
      }

      // Activation Notice
      if (now < activationTime) {
        const parts = getCountdownParts(activationTime - now);
        renderTimer("activation-timer", parts);
        document.getElementById("activation-status").textContent = "Starting in";
      } else {
        document.getElementById("activation-timer").innerHTML = "";
        document.getElementById("activation-status").textContent = "Past";
      }

      // Activation Event
      if (now < eventStart) {
        const parts = getCountdownParts(eventStart - now);
        renderTimer("event-timer", parts);
        document.getElementById("event-status").textContent = "Starting in";
      } else if (now >= eventStart && now < eventEnd) {
        const parts = getCountdownParts(eventEnd - now);
        renderTimer("event-timer", parts);
        document.getElementById("event-status").textContent = "Ending in";
      } else {
        document.getElementById("event-timer").innerHTML = "";
        document.getElementById("event-status").textContent = "Ended";
      }
    }

    setInterval(updateCountdowns, 1000);
    updateCountdowns();
  </script>
